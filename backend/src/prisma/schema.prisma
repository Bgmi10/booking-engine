  @@index([checkIn, checkOut])
  @@index([localBookingId])
}

model ChannelBookingRoom {
  id                String          @id @default(uuid())
  
  // References
  channelBooking    ChannelBooking  @relation(fields: [channelBookingId], references: [id], onDelete: Cascade)
  channelBookingId  String
  
  // Room details
  channelRoomId     String          // External room ID from channel
  roomName          String          // Room name as provided by channel
  roomType          String?         // Room type/category
  
